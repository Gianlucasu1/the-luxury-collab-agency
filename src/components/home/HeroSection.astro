---
import HeroJet from '../../assets/hero-jet.jpg';
---

<section class="relative h-screen overflow-hidden">
  <!-- Background Image with Parallax -->
  <div id="hero-bg" class="absolute inset-0 bg-cover bg-center bg-no-repeat" style={`background-image: url(${HeroJet.src});`}></div>
  <!-- Overlay - Dark blue and Nordic Tide -->
  <div
    class="absolute inset-0"
    style="background: linear-gradient(to bottom, #11353eB3, #2a678173, #11353eD9)"
  ></div>

  <!-- Strong Radial Shadow for Maximum Text Readability (hex colors only) -->
  <div
    class="absolute inset-0 pointer-events-none z-[5]"
    style="background: radial-gradient(circle at center, #0000 0%, #0000 60%, #000000CC 100%)"
  ></div>

  <!-- Content (constrained) -->
  <div class="relative z-10 h-full flex items-center justify-center">
    <div class="container mx-auto px-6">
      <div class="text-center max-w-4xl mx-auto relative">
        <!-- Semi-transparent background for text -->
        <div class="absolute inset-0 rounded-2xl -m-8" style="background-color: #00000033"></div>
        <div class="relative z-10">
          <h1 class="text-5xl md:text-7xl font-sans font-bold leading-tight text-white mb-6">
            Unlock the World's Most
            <span class="block text-[#efb958]">Exclusive Experiences</span>
          </h1>

          <p class="text-xl md:text-2xl text-white/90 mb-8 font-sans font-light max-w-2xl mx-auto drop-shadow-2xl [text-shadow:_0_4px_12px_rgba(0,0,0,0.9)]">
            Private Jets, Luxury Villas, Exotic Cars â€“ At Your Fingertips
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <a class="text-lg px-10 py-6 premium-cta-dark">
              Explore Experiences
            </a>
            <a class="text-lg px-10 py-6 premium-cta">
              Watch Our Story
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator - Positioned at bottom of hero section -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce z-20">
    <div class="w-6 h-10 border-2 rounded-full flex justify-center" style="border-color: #efb958">
      <div class="w-1 h-3 rounded-full mt-2 animate-pulse" style="background-color: #efb958"></div>
    </div>
  </div>
</section>

<script type="module">
  const hero = document.getElementById('hero-bg');
  const onScroll = () => {
    const y = window.scrollY || 0;
    if (hero) {
      hero.style.transform = `translateY(${y * 0.5}px)`;    }
  };
  window.addEventListener('scroll', onScroll, { passive: true });
  onScroll();
</script>