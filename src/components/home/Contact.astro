---
import yachtVector from '../../assets/yacht_vector.png';
import yachtFooterCover from '../../assets/yacht_footer_cover.png';
---

<section
  class="relative overflow-hidden py-20 md:py-28 lg:py-36 bg-no-repeat bg-center bg-cover"
  style={`background-image: url(${yachtFooterCover.src});`}
  >
  <div class="absolute inset-0 bg-black/60"></div>
  <div class="relative z-10 container mx-auto px-6">
    <div class="container mx-auto grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 items-center">
      <!-- Left: Heading -->
      <div>
        <img src={yachtVector.src} alt="" class="w-36 h-auto mb-4" />
        <div
          class="text-white"
          style="font-family: 'Libre Bodoni', serif; font-weight: 700; font-size: 64px; line-height: 80px; letter-spacing: -0.01em;"
        >
          Have Questions?
        </div>
        <div
          class="text-[#efb958] -mt-1"
          style="font-family: 'Libre Bodoni', serif; font-weight: 700; font-size: 64px; line-height: 80px; letter-spacing: -0.01em;"
        >
          Get in Touch
        </div>
      </div>

      <!-- Right: Contact Form -->
      <div class="p-6 md:p-8">
        <form class="space-y-5">
          <div>
            <label for="fullname" class="block text-sm font-medium text-white mb-2">
              Full Name
            </label>
            <input
              id="fullname"
              type="text"
              class="w-full rounded-lg border border-white/30 bg-white/90 backdrop-blur-sm px-4 py-2.5 outline-none focus:ring-2 focus:ring-[#efb958] text-[#11353e] placeholder:text-gray-500"
              placeholder="Enter your full name"
              required
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-white mb-2">
              Email
            </label>
            <input
              id="email"
              type="email"
              class="w-full rounded-lg border border-white/30 bg-white/90 backdrop-blur-sm px-4 py-2.5 outline-none focus:ring-2 focus:ring-[#efb958] text-[#11353e] placeholder:text-gray-500"
              placeholder="you@example.com"
              required
            />
          </div>
          <div>
            <label for="details" class="block text-sm font-medium text-white mb-2">
              Request Details
            </label>
            <textarea
              id="details"
              rows="5"
              class="w-full rounded-lg border border-white/30 bg-white/90 backdrop-blur-sm px-4 py-2.5 outline-none focus:ring-2 focus:ring-[#efb958] text-[#11353e] placeholder:text-gray-500"
              placeholder="Tell us about your ideal itinerary, dates, and preferences"
              required
            ></textarea>
          </div>
          <div>
            <button
              type="submit"
              class="bg-[#efb958] text-[#11353e] hover:bg-[#dca64f] rounded-md font-medium px-7 py-3 w-full inline-block transition-colors duration-300"
            >
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>