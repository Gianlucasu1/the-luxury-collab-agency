---
import waterBg from '../../assets/water_bg.png';
import logo from '../../assets/logo.png';

const processSteps = [
  {
    number: "01",
    title: "Discovery",
    description: "We begin with deep listening, understanding your vision, dreams, and unique story.",
    icon: "compass"
  },
  {
    number: "02", 
    title: "Design",
    description: "Our team crafts a bespoke experience that reflects your personality and exceeds expectations.",
    icon: "target"
  },
  {
    number: "03",
    title: "Coordination",
    description: "Every detail is meticulously planned and executed with precision and care.",
    icon: "users"
  },
  {
    number: "04",
    title: "Celebration",
    description: "We ensure your moment unfolds flawlessly, allowing you to be fully present.",
    icon: "star"
  }
];
---

<!-- Our Process -->
<section 
  class="py-20 relative overflow-hidden bg-no-repeat bg-center bg-cover"
  style={`background-image: url(${waterBg.src});`}
>
  <div class="absolute inset-0 bg-gradient-to-br from-[#2a6781]/90 via-[#2a6781]/70 to-[#2a6781]/50"></div>
  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-sans font-bold text-[#ead4b7] mb-6">
        Our <span class="text-[#efb958]">Process</span>
      </h2>
      <p class="text-xl text-[#ead4b7] font-sans max-w-2xl mx-auto">
        A methodical approach to creating extraordinary experiences
      </p>
    </div>
    
    <div class="relative max-w-6xl mx-auto">
      <!-- Luxury Arrow Path -->
      <div class="absolute inset-0 pointer-events-none">
        <svg 
          class="w-full h-full" 
          viewBox="0 0 1600 300" 
          fill="none" 
          xmlns="http://www.w3.org/2000/svg"
        >
          <!-- Extended Parabolic Arrow Path - Starting from screen edge -->
          <path 
            d="M -100 150 Q 100 100 300 150 Q 500 200 700 150 Q 900 100 1100 150 Q 1300 180 1500 200" 
            stroke="url(#goldGradient)" 
            stroke-width="3" 
            fill="none"
            stroke-dasharray="10,5"
            class="animate-pulse"
          />
          
          <!-- Arrow Head -->
          <path 
            d="M 1490 195 L 1500 200 L 1490 205" 
            stroke="url(#goldGradient)" 
            stroke-width="4" 
            stroke-linecap="round"
            stroke-linejoin="round"
          />
          
          <!-- Gradient Definition -->
          <defs>
            <linearGradient id="goldGradient" x1="0%" y1="0%" x2="100%" y2="0%">
              <stop offset="0%" stop-color="#efb958" stop-opacity="0.3" />
              <stop offset="50%" stop-color="#efb958" stop-opacity="0.8" />
              <stop offset="100%" stop-color="#efb958" stop-opacity="0.3" />
            </linearGradient>
          </defs>
          
          <!-- Glow Effect -->
          <path 
            d="M -100 150 Q 100 100 300 150 Q 500 200 700 150 Q 900 100 1100 150 Q 1300 180 1500 200" 
            stroke="url(#goldGradient)" 
            stroke-width="8" 
            fill="none"
            opacity="0.3"
            filter="blur(4px)"
          />
        </svg>
      </div>
      
      <!-- Logo at the very end of the section -->
      <div class="absolute -bottom-8 -right-8 z-20">
        <div class="w-24 h-24 bg-[#efb958]/20 rounded-full flex items-center justify-center border-2 border-[#efb958]/40 backdrop-blur-sm shadow-lg">
          <img 
            src={logo.src} 
            alt="The Luxury Collab Agency" 
            class="w-16 h-16 object-contain"
          />
        </div>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-16 relative z-10">
        {processSteps.map((step, index) => (
          <div class="text-center group">
            <div class="rounded-2xl p-8 hover:scale-105 transition-all duration-500 h-full bg-white shadow-xl border border-gray-200">
              <div class="w-16 h-16 bg-[#efb958] rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                <!-- Compass Icon -->
                {step.icon === 'compass' && (
                  <svg class="w-8 h-8 text-[#11353e]" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/>
                  </svg>
                )}
                <!-- Target Icon -->
                {step.icon === 'target' && (
                  <svg class="w-8 h-8 text-[#11353e]" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"/>
                  </svg>
                )}
                <!-- Users Icon -->
                {step.icon === 'users' && (
                  <svg class="w-8 h-8 text-[#11353e]" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zm4 18v-6h2.5l-2.54-7.63A1.5 1.5 0 0 0 18.54 8H17c-.8 0-1.54.37-2.01.99L14 10.5v1.5h2v6h2zm-6.5-10.5c.83 0 1.5-.67 1.5-1.5s-.67-1.5-1.5-1.5S12 8.17 12 9s.67 1.5 1.5 1.5zM5.5 6c1.11 0 2-.89 2-2s-.89-2-2-2-2 .89-2 2 .89 2 2 2zm2 16v-7H9V9.5C9 8.12 7.88 7 6.5 7S4 8.12 4 9.5V15h1.5v7h2zm6.5 0v-4h1v-4.5c0-.83.67-1.5 1.5-1.5s1.5.67 1.5 1.5V15h1v4h-4z"/>
                  </svg>
                )}
                <!-- Star Icon -->
                {step.icon === 'star' && (
                  <svg class="w-8 h-8 text-[#11353e]" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                )}
              </div>
              
              <div class="mb-4">
                <span class="text-sm font-sans font-semibold text-[#efb958] tracking-wider">
                  {step.number}
                </span>
                <h3 class="text-xl font-sans font-bold text-gray-700 mt-2">
                  {step.title}
                </h3>
              </div>
              
              <p class="text-gray-700 font-sans leading-relaxed">
                {step.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
